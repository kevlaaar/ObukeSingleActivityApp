<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <EditText
        android:id="@+id/activityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add activity title"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/activityDate"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add activity date"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/activityTitle"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/activityEvidenceImageView"
        android:layout_width="300dp"
        app:shapeAppearanceOverlay="@style/roundImageView"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/activityDate"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="180dp"/>

    <Button
        android:id="@+id/addActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_blue_round_12dp"
        app:layout_constraintTop_toBottomOf="@id/activityEvidenceImageView"
        android:layout_marginTop="50dp"
        android:alpha="0.4"
        android:text="ADD ACTIVITY"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>